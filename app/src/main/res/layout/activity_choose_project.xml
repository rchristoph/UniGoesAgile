<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChooseProject">

    <TextView
            android:text="Create new Project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/newtextview"
            android:includeFontPadding="true"
            android:textAppearance="@android:style/TextAppearance.Material.WindowTitle"
            android:visibility="visible" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            android:textSize="24sp" android:layout_marginTop="44dp" app:layout_constraintTop_toTopOf="parent"
    />
    <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/chooseProj"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="10dp"
            android:visibility="visible" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="60dp" app:layout_constraintTop_toBottomOf="@+id/newtextview"
            android:layout_marginBottom="20dp" app:layout_constraintBottom_toTopOf="@+id/ddl">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:hint="Choose Projectname" android:textSize="18sp" android:maxLines="1"
                android:id="@+id/projectTxt" android:visibility="visible"/>
    </android.support.design.widget.TextInputLayout>
    <TextView
            android:text="Deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ddl"
            android:includeFontPadding="true"
            android:textAppearance="@android:style/TextAppearance.Material.WindowTitle"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintBottom_toTopOf="@+id/datePicker" android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/chooseProj"
            app:layout_constraintVertical_bias="1.0" android:visibility="visible"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_today"
            android:id="@+id/datePicker" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="128dp"
            android:visibility="visible"
            android:layout_marginBottom="48dp" app:layout_constraintBottom_toTopOf="@+id/createBtn"/>
    <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/showDate"
            android:textSize="18sp" android:visibility="visible"
            android:layout_marginBottom="56dp"
            app:layout_constraintBottom_toTopOf="@+id/createBtn"
            android:layout_marginStart="80dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/datePicker" android:hint="dd/mm/yyyy"
            app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="Create"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:id="@+id/createBtn"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="10dp"
            style="@style/Widget.AppCompat.Button.Colored" app:layout_constraintHorizontal_bias="0.0"
            android:visibility="visible" android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toTopOf="@+id/joinExist"/>
    <TextView
            android:text="Join existing Project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/joinExist"
            android:includeFontPadding="true"
            android:textAppearance="@android:style/TextAppearance.Material.WindowTitle"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="visible"
            android:textSize="16sp" android:layout_marginBottom="44dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Join Project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/joinProj"
            android:includeFontPadding="true"
            android:textAppearance="@android:style/TextAppearance.Material.WindowTitle"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone" android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="36dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout4" app:layout_constraintVertical_bias="0.417"/>
    <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="63dp"
            android:id="@+id/textInputLayout4"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:visibility="visible"
            android:layout_marginBottom="100dp" app:layout_constraintBottom_toTopOf="@+id/joinBtn">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Project ID" android:id="@+id/projectid" android:visibility="gone"/>
    </android.support.design.widget.TextInputLayout>
    <Button
            android:text="Join"
            android:layout_height="47dp"
            android:id="@+id/joinBtn"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:textColor="@android:color/white"
            android:layout_width="0dp" android:visibility="gone"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="68dp" app:layout_constraintBottom_toTopOf="@+id/changeActivity"/>
    <TextView
            android:text="Create new project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/changeActivity"
            android:includeFontPadding="true"
            android:textAppearance="@android:style/TextAppearance.Material.WindowTitle"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="16sp"
            android:visibility="gone" android:layout_marginBottom="72dp"
            app:layout_constraintBottom_toTopOf="@+id/showDate"/>
</android.support.constraint.ConstraintLayout>