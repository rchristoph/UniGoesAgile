<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".LoginActivity">


    <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="55dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.488"
            android:id="@+id/textInputLayout2" android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout"
            android:background="@drawable/textinput_layout"
            android:layout_marginLeft="12dp" android:layout_marginRight="12dp">

        <android.support.design.widget.TextInputEditText
                android:id="@+id/emailTxt"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:hint="Email"
                android:layout_marginLeft="15dp"
                android:backgroundTint="#FFFFFF"
                android:singleLine="true"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.488" android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toTopOf="@+id/loginBtn" android:layout_marginLeft="12dp"
            android:background="@drawable/textinput_layout"
            android:layout_marginRight="12dp">

        <android.support.design.widget.TextInputEditText
                android:id="@+id/passwordTxt"
                android:layout_width="285dp"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:backgroundTint="#FFFFFF"
                android:layout_marginLeft="15dp"/>
    </android.support.design.widget.TextInputLayout>

    <Button
            android:id="@+id/loginBtn"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:text="Login"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/regTxt"
            android:background="@drawable/buttons_bg"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="12dp"
            android:textColor="@color/colorPrimaryDark" android:fontFamily="@font/muli" android:textStyle="bold"
            android:layout_marginBottom="12dp" app:layout_constraintHorizontal_bias="0.0"/>

    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imageView" android:layout_marginTop="44dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.497"
            app:srcCompat="@drawable/logo1zu1"
            android:background="@drawable/circle_view"
            android:elevation="5dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout2" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:id="@+id/regTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="Or register here"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:textStyle="bold" android:textColor="@color/colorText" android:fontFamily="@font/muli"/>
</android.support.constraint.ConstraintLayout>
