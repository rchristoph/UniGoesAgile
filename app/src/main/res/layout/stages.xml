<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="365dp"
                                             android:layout_height="70dp"
                                             android:orientation="horizontal"
                                             android:padding="10dp" android:id="@+id/relativeLayout">
    <TextView
            android:id="@+id/TextViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/chkDone"
            android:layout_toRightOf="@+id/chkDone"
            android:text="Item Text"

            android:fontFamily="@font/muli_extralight" android:textSize="18sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="11/11/1111"
            android:layout_height="20dp" android:id="@+id/start1" android:layout_width="95dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true" android:layout_above="@+id/end1"
            android:layout_marginTop="1dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toTopOf="@+id/end1" android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/TextViewName"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="22/22/2222"
            android:layout_width="95dp"
            android:layout_height="20dp" android:id="@+id/end1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="1dp"
            android:layout_marginTop="5dp" app:layout_constraintTop_toBottomOf="@+id/start1"
            app:layout_constraintStart_toEndOf="@+id/TextViewName" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="1.0"/>
</android.support.constraint.ConstraintLayout>