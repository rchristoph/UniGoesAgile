<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".chooseNickname">

    <Spinner
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:id="@+id/spinner1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="12dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="45dp"
            app:layout_constraintBottom_toTopOf="@+id/nextBtn"
    />
    <Spinner
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:id="@+id/spinner3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintEnd_toStartOf="@+id/selectedBtn" android:layout_marginEnd="2dp"/>
    <TextView
            android:text="Choose your Nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:entries="@array/animal_arrays"
            android:prompt="@array/animal_arrays"
            android:textSize="25sp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="35dp" app:layout_constraintBottom_toTopOf="@+id/spinner1"
            android:fontFamily="@font/muli" android:textStyle="bold"/>

    <TextView
            android:text="Choose Theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:entries="@array/animal_arrays"
            android:prompt="@array/animal_arrays"
            android:textSize="25sp"
            android:textStyle="bold" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="35dp"
            app:layout_constraintBottom_toTopOf="@+id/spinner3"
            android:fontFamily="@font/muli"/>
    <Button
            android:id="@+id/nextBtn"
            android:layout_width="368dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:text="Next"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.703"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/muli"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/buttons_bg" android:textStyle="bold"/>
    <Button
            android:text="OK"
            android:layout_width="46dp"
            android:layout_height="36dp"
            android:id="@+id/selectedBtn" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:textColor="@color/colorPrimaryDark" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10" android:layout_marginBottom="31dp"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            android:background="@drawable/buttons_bg" android:textStyle="bold"/>
    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/logo1zu1"
            android:id="@+id/imageView3"
            android:background="@drawable/circle_view" android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginBottom="52dp" app:layout_constraintBottom_toTopOf="@+id/textView10"
            app:layout_constraintVertical_bias="0.0"/>
</android.support.constraint.ConstraintLayout>